<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="com.pavelrybakov.warehouse.domains.Company" alias="Company"/>
        <typeAlias type="com.pavelrybakov.warehouse.domains.House" alias="House"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://localhost:5432/warehouse"/>
                <property name="username" value="postgres"/>
                <property name="password" value="1234"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="com/pavelrybakov/warehouse/dao/mappers/CompanyDao.xml"/>
        <mapper resource="com/pavelrybakov/warehouse/dao/mappers/HouseDao.xml"/>
    </mappers>
</configuration>